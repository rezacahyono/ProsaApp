<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_bg_text"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_margin_horizontal_size"
        android:layout_marginTop="@dimen/text_margin_vertical_size"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Muhamad Reza Cahyono" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_margin_horizontal_size"
        android:layout_marginBottom="@dimen/text_margin_vertical_size"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="16 Desember 2022" />

</LinearLayout>