<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prosa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:colorBackground">@color/colorBackgroundInverse</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorAccentTranslucent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryContainer">@color/colorAccentTranslucent</item>
        <item name="android:statusBarColor">@color/colorSurfaceInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="colorSurface">@color/colorSurfaceInverse</item>

        <item name="toolbarStyle">@style/Widget.Prosa.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.Prosa.Appbar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Prosa.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Prosa.AlertDialog</item>
        <item name="snackbarStyle">@style/Widget.Prosa.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
    </style>

    <style name="Widget.Prosa.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Prosa.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="titleMarginStart">@dimen/title_margin_toolbar</item>
        <item name="android:elevation">0dp</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="Widget.Prosa.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Prosa.Appbar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.Prosa.Toolbar" parent="">
        <item name="colorPrimary">@color/colorSurfaceInverse</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.Prosa.Appbar" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.Prosa.Button" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">?colorAccent</item>
    </style>
</resources>